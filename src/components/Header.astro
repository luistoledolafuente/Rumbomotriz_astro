---
import ThemeToggle from "./ThemeToggle.astro";
---

<header 
  id="main-header"
  class="fixed top-0 left-0 z-50 w-full transition-all duration-500 bg-transparent group"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-20">

      <a href="/#" class="flex items-center gap-3">
        <div class="text-primary transition-transform duration-300 hover:scale-110">
          <span class="material-symbols-outlined !text-4xl">tire_repair</span>
        </div>
        <div class="flex flex-col">
          <span class="text-xl font-black tracking-tighter text-foreground group-[.is-scrolled]:text-white leading-none">RUMBO</span>
          <span class="text-sm font-bold tracking-widest text-muted group-[.is-scrolled]:text-neutral-400 leading-none">MOTRIZ</span>
        </div>
      </a>

      <nav class="hidden md:flex items-center gap-8">
        <a class="text-base font-medium text-foreground group-[.is-scrolled]:text-white hover:text-primary transition-colors" href="/#inicio">Inicio</a>
        <a class="text-base font-medium text-foreground group-[.is-scrolled]:text-white hover:text-primary transition-colors" href="/#sobre-nosotros">Sobre Nosotros</a>
        <a class="text-base font-medium text-foreground group-[.is-scrolled]:text-white hover:text-primary transition-colors" href="/catalogo">Neumáticos</a>
        <a class="text-base font-medium text-foreground group-[.is-scrolled]:text-white hover:text-primary transition-colors" href="/#rencauche">Rencauche</a>
        <a class="text-base font-medium text-foreground group-[.is-scrolled]:text-white hover:text-primary transition-colors" href="/#contacto">Contacto</a>
      </nav>

      <div class="hidden md:flex items-center gap-4">
        <div class="cursor-pointer flex items-center justify-center hover:opacity-80 transition-opacity">
          <ThemeToggle />
        </div>
        <a class="flex min-w-[84px] cursor-pointer items-center justify-center overflow-hidden rounded-lg h-10 px-4 bg-primary text-white text-sm font-bold hover:bg-primary/90 transition-colors" href="/#contacto">
          <span class="truncate">Cotizar Ahora</span>
        </a>
      </div>

      <div class="flex md:hidden items-center gap-4">
        <ThemeToggle /> 
        <button id="mobile-menu-btn" class="text-foreground group-[.is-scrolled]:text-white focus:outline-none p-2" aria-label="Menu">
          <span class="material-symbols-outlined !text-3xl">menu</span>
        </button>
      </div>

    </div>
  </div>

  <div id="mobile-menu" class="hidden md:hidden absolute top-20 left-0 w-full bg-background/95 backdrop-blur-xl border-b border-border shadow-lg flex-col p-6 gap-6 transition-all duration-300">
    <nav class="flex flex-col gap-6 text-center">
      <a class="mobile-link text-xl font-medium text-foreground hover:text-primary" href="/#inicio">Inicio</a>
      <a class="mobile-link text-xl font-medium text-foreground hover:text-primary" href="/#sobre-nosotros">Sobre Nosotros</a>
      <a class="mobile-link text-xl font-medium text-foreground hover:text-primary" href="/catalogo">Neumáticos</a>
      <a class="mobile-link text-xl font-medium text-foreground hover:text-primary" href="/#rencauche">Rencauche</a>
      <a class="mobile-link text-xl font-medium text-foreground hover:text-primary" href="/#contacto">Contacto</a>
    </nav>
    <a 
      href="/#contacto"
      class="w-full bg-primary text-white py-3 rounded-lg font-bold text-center text-lg shadow-md hover:bg-primary/90 transition-colors"
    >
      Cotizar Ahora
    </a>
  </div>
</header>

<script>
  function setupHeader() {
    const header = document.getElementById('main-header');
    const menuBtn = document.getElementById('mobile-menu-btn');
    const menu = document.getElementById('mobile-menu');
    const menuLinks = document.querySelectorAll('.mobile-link');

    // Scroll Effect
    function updateHeader() {
      if (window.scrollY > 20) {
        header?.classList.add('is-scrolled', 'bg-neutral-950/90', 'backdrop-blur-md', 'shadow-md');
        header?.classList.remove('bg-transparent');
      } else {
        header?.classList.remove('is-scrolled', 'bg-neutral-950/90', 'backdrop-blur-md', 'shadow-md');
        header?.classList.add('bg-transparent');
      }
    }

    window.addEventListener('scroll', updateHeader);
    updateHeader(); // Init on load

    // Mobile Menu
    if (menuBtn && menu) {
      // Clean up previous listeners if any (though setupHeader runs once per page view usually)
      // Simpler to just add new ones, as old elements are replaced.
      
      menuBtn.addEventListener('click', (e) => {
        e.stopPropagation();
        menu.classList.toggle('hidden');
        menu.classList.toggle('flex');
      });

      // Close menu when clicking outside or on a link
      document.addEventListener('click', (e) => {
        if (!menu.contains(e.target as Node) && !menuBtn.contains(e.target as Node)) {
          menu.classList.add('hidden');
          menu.classList.remove('flex');
        }
      });

      menuLinks.forEach(link => {
        link.addEventListener('click', () => {
          menu.classList.add('hidden');
          menu.classList.remove('flex');
        });
      });
    }
  }

  // Run on view transition navigation (and initial load if ViewTransitions enabled)
  document.addEventListener('astro:page-load', setupHeader);
</script>