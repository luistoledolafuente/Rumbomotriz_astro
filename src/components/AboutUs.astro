    <section class="w-full py-20" id="sobre-nosotros">
      <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
        <!-- Columna de Texto -->
        <div class="flex flex-col gap-4">
          <h2
            class="text-white text-3xl md:text-4xl font-black leading-tight tracking-tighter"
          >
            Sobre Nosotros
          </h2>
          <p class="text-text-muted text-base font-normal leading-normal">
