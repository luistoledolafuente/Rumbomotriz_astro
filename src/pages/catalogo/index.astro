---
import Layout from '../../layouts/Layout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import ProductCard from '../../components/ProductCard.astro';
import Breadcrumbs from '../../components/Breadcrumbs.astro';
import { products } from '../../data/products';
---

<Layout title="Catálogo Completo - Rumbomotriz" description="Explore nuestro catálogo completo de neumáticos y servicios para la minería.">
  <div class="flex flex-col min-h-screen">
    <Header />
    
    <main class="flex-grow w-full max-w-7xl mx-auto px-4 pt-32 pb-12 sm:px-6 lg:px-8">
      <Breadcrumbs items={[{ label: 'Catálogo' }]} />
      
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-black text-foreground mb-4">Catálogo de Neumáticos</h1>
        <p class="text-muted text-lg max-w-2xl mx-auto">
          Explore nuestra gama completa de soluciones para minería a cielo abierto y subterránea.
        </p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-8">
        {products.map((product) => (
          <ProductCard
            id={product.id}
            title={product.title}
            description={product.description}
            imgSrc={product.imgSrc}
            imgAlt={product.imgAlt}
          />
        ))}
      </div>

    </main>

    <Footer />
  </div>
</Layout>