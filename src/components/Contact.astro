---
// src/components/Contact.astro
const formAction = "https://formspree.io/f/xanrveyk"; 
---
<section class="w-full py-20" id="contacto">
  <div class="bg-surface rounded-xl p-8 md:p-12 border border-border"> 
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      
      <div class="flex flex-col gap-6">
        <h2 class="text-foreground text-3xl md:text-4xl font-black leading-tight tracking-tighter">Contáctenos</h2>
        <p class="text-muted text-base font-normal leading-normal">
          ¿Listo para optimizar su operación? Complete el formulario para recibir una cotización personalizada.
        </p>
        <div class="flex flex-col gap-4">
          <div class="flex items-start gap-4">
            <span class="material-symbols-outlined text-primary mt-1">location_on</span>
            <div class="flex flex-col">
              <p class="text-foreground font-semibold">Rumbomotriz S.A.C.</p>
              <p class="text-muted text-sm">Av. Gral. Andrés de Santa Cruz 270, Jesús María, Lima</p>
            </div>
          </div>
          <div class="flex items-center gap-4">
            <span class="material-symbols-outlined text-primary">phone</span>
            <a href="https://wa.me/51930599112" target="_blank" class="text-foreground hover:text-primary transition-colors">+51 930 599 112</a>
          </div>
          <div class="flex items-center gap-4">
            <span class="material-symbols-outlined text-primary">mail</span>
            <a href="mailto:ventas@rumbomotriz.cl" class="text-foreground hover:text-primary transition-colors">ventas@rumbomotriz.cl</a>
          </div>
        </div>
      </div>

      <div class="flex flex-col gap-4">
        <form 
          id="contact-form"
          action={formAction} 
          method="POST" 
          class="flex flex-col gap-4"
        >
          
          <label for="name" class="sr-only">Nombre Completo</label>
          <input 
            id="name"
            name="name" 
            required
            class="w-full h-12 px-4 bg-background border border-border rounded-lg text-foreground focus:ring-2 focus:ring-primary outline-none" 
            placeholder="Nombre Completo" 
            type="text"
          />

          <label for="email" class="sr-only">Email</label>
          <input 
            id="email"
            name="email"
            required
            class="w-full h-12 px-4 bg-background border border-border rounded-lg text-foreground focus:ring-2 focus:ring-primary outline-none" 
            placeholder="Email" 
            type="email"
          />

          <label for="phone" class="sr-only">Teléfono</label>
          <input 
            id="phone"
            name="phone"
            class="w-full h-12 px-4 bg-background border border-border rounded-lg text-foreground focus:ring-2 focus:ring-primary outline-none" 
            placeholder="Teléfono" 
            type="tel"
          />

          <label for="message" class="sr-only">Mensaje</label>
          <textarea 
            id="message"
            name="message"
            required
            class="w-full p-4 bg-background border border-border rounded-lg text-foreground focus:ring-2 focus:ring-primary outline-none" 
            placeholder="Mensaje" 
            rows="4"
          ></textarea>
          
          <button 
            id="submit-btn"
            class="cursor-pointer rounded-lg h-12 px-6 bg-primary text-white text-base font-bold hover:bg-primary/90 transition-colors shadow-lg hover:shadow-xl disabled:opacity-50 disabled:cursor-not-allowed" 
            type="submit"
          >
            Enviar Consulta
          </button>
        </form>
        <p id="form-status" class="hidden text-center text-sm font-bold"></p>
      </div>

    </div>
  </div>
</section>

<script>
  // Lógica para manejar el envío sin recargar y limpiar el formulario
  const form = document.getElementById('contact-form');
  const status = document.getElementById('form-status');
  const btn = document.getElementById('submit-btn');

  if (form) {
    // 1. Auto-llenado desde URL (si vienes de un producto)
    const urlParams = new URLSearchParams(window.location.search);
    const productRequest = urlParams.get('producto');
    const messageField = document.getElementById('message');
    
    if (productRequest && messageField) {
      messageField.value = `Hola, estoy interesado en cotizar el producto: ${productRequest}. \n\nMe gustaría saber...`;
      // Limpiar URL para que no se vea feo (opcional)
      // window.history.replaceState({}, document.title, "/#contacto");
    }

    form.addEventListener('submit', async function(e) {
      e.preventDefault(); // Evita la recarga de página
      
      const formData = new FormData(form);
      
      // Estado de carga
      if (btn) {
        btn.setAttribute('disabled', 'true');
        btn.innerText = 'Enviando...';
      }
      if (status) status.classList.add('hidden');

      try {
        const response = await fetch(form.getAttribute('action'), {
          method: form.getAttribute('method'),
          body: formData,
          headers: {
            'Accept': 'application/json' // Importante para Formspree
          }
        });

        if (response.ok) {
          // 1. LIMPIAR EL FORMULARIO
          form.reset(); 
          
          // 2. Mostrar mensaje de éxito
          if (status) {
            status.innerHTML = "¡Mensaje enviado con éxito!";
            status.classList.remove('hidden', 'text-red-500');
            status.classList.add('text-green-500');
          }
        } else {
          // Error del servidor
          if (status) {
            const data = await response.json();
            if (Object.hasOwn(data, 'errors')) {
              status.innerHTML = data["errors"].map(error => error["message"]).join(", ");
            } else {
              status.innerHTML = "Hubo un problema al enviar el mensaje.";
            }
            status.classList.remove('hidden', 'text-green-500');
            status.classList.add('text-red-500');
          }
        }
      } catch (error) {
        // Error de red
        if (status) {
          status.innerHTML = "Error de conexión. Intente nuevamente.";
          status.classList.remove('hidden', 'text-green-500');
          status.classList.add('text-red-500');
        }
      } finally {
        // Restaurar botón
        if (btn) {
          btn.removeAttribute('disabled');
          btn.innerText = 'Enviar Consulta';
        }
      }
    });
  }
</script>