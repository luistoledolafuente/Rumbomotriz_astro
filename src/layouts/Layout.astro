---
// 1. Importamos los estilos globales que ya creamos
import '../styles/global.css';
import "../styles/custom.css";
import WhatsAppButton from '../components/WhatsAppButton.astro';
export interface Props {
  title: string;
}
const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="es"> 
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  
  <script is:inline>
  (function () {
    const storageKey = 'theme-preference';
    const classDark = 'dark';

    function getThemePreference() {
      // 1. Intentar obtener del localStorage
      const stored = localStorage.getItem(storageKey);
      if (stored === 'light' || stored === 'dark') {
        return stored;
      }
      
      // 2. Si no hay, usar la preferencia del sistema
      if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        return 'dark';
      }
      
      // 3. Por defecto, 'light'
      return 'light';
    }

    const currentTheme = getThemePreference();
    if (currentTheme === 'dark') {
        document.documentElement.classList.add(classDark);
    } else {
        document.documentElement.classList.remove(classDark);
    }
  })();
  </script>
  
  <title>{title}</title>

  <link href="https://fonts.googleapis.com" rel="preconnect" />
  <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin />
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700;900&display=swap" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined" rel="stylesheet" />
</head>

<body class="bg-background-main text-light font-display">
  <slot />
  <WhatsAppButton />
</body>
</html>